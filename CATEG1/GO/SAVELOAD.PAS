PROCEDURE Sauvegarder;
 Var f:F_Enreg;
     enr:T_Enreg;
     ligne,i:byte;
   Begin TextAttr:=Yellow+16*Blue;
         ClrScr; 
         GotoXY(35,1); Writeln('SAUVEGARDER');
         Writeln('Choisissez un emplacement et tapez un texte identificateur');
         Assign(f,'GO.SAV');
         Reset(f);
         For i:=1 to NbEnreg do
         begin Read(f,enr);
               GotoXY(1,i+3); Write(i:2);
               GotoXY(5,i+3); Write(enr.titre);
         end;
         Curseur(true);
         While BoutonPresse(1) do;
         Repeat Repeat until BoutonPresse(1);
                While BoutonPresse(1) do; VideClavier;
                ligne:=PosYt;
         Until ligne in [4..23];
         Seek(f,ligne-4); CurseurTexte(6,7); GotoXY(5,ligne);
         Curseur(false);
         ClrEol; Saisir(enr.titre);
         enr.aqui:=aqui; enr.g:=g;
         enr.jr:=jr; enr.pr:=pr;
         enr.idim:=idim;
         Write(f,enr);
         Close(f);
         CurseurTexte(7,0);
   End;

PROCEDURE Charger;
 Var f:F_Enreg;
     enr:T_Enreg;
     ligne,i:byte;
   Begin TextAttr:=Yellow+16*Blue;
         ClrScr; 
         GotoXY(35,1); Writeln('CHARGER');
         Writeln('Choisissez une sauvegarde');
         Assign(f,'GO.SAV');
         Reset(f);
         For i:=1 to NbEnreg do
         begin Read(f,enr);
               GotoXY(1,i+3); Write(i:2);
               GotoXY(5,i+3); Write(enr.titre);
         end;
         Curseur(true);
         While BoutonPresse(1) do; ligne:=1;
         Repeat Repeat until BoutonPresse(1);
                While BoutonPresse(1) do;
                ligne:=PosYt;
         Until ligne in [4..23];
         Seek(f,ligne-4);
         Read(f,enr);
         Close(f);
         g:=enr.g; aqui:=enr.aqui; pr:=enr.pr; jr:=enr.jr; idim:=enr.idim;
         Curseur(false);
   End;